<section id="tasks">
  <h1>Tasks</h1>

  <div class="well">
    <%= simple_form_for @new_task, html: { class: 'form-inline' } do |f| %>
      <%= f.input :title, label: false, placeholder: "What do you want to do?", autofocus: true %>
      <%= f.submit "Create Task", class: "btn btn-primary" %>
    <% end %>
  </div>

  <ul>
    <% Task.all.each do |task| %>
      <li><%= task.title %></li>
    <% end %>
  </ul>
</section>